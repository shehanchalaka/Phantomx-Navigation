<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:property name="connect_offset" value="0.02633" />
<xacro:property name="thigh_offset_y" value="-0.0645" />
<xacro:property name="thigh_offset_z" value="-0.0145" />



<xacro:macro name="phantomx" params="parent *origin">


      <joint name="j_phantomx_attachment" type="fixed">
        <parent link="${parent}"/>
        <child link="MP_BODY"/>
        <xacro:insert_block name="origin" />
      </joint>
      

      <link name="MP_BODY">
        <inertial>
          <origin xyz="0 0 0" />
          <mass value="0.97559947"/>
          <inertia ixx="3.1081800"  ixy="-0.25460189"  ixz="2.0318174" iyy="6.3787776" iyz="0.16417863" izz="5.3316425" />
        </inertial>
        <visual>
          <!--origin xyz="-0.0235 0 -0.03525" rpy="0 0 0" /-->
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>
            <!--box size="0.102 0.109 0.106" /-->
            <mesh filename="package://phantomx_description/meshes_mk3/body.STL"  scale="1 1 1"/>
          </geometry>
          <material name="Grey">
            <color rgba="0.20 0.20 0.20 1.0"/>
          </material>
        </visual>
        <collision>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>
            <mesh filename="package://phantomx_description/meshes_mk3/body_coll.STL"  scale="1 1 1"/>
          </geometry>

        </collision>
      </link>


      <gazebo reference="MP_BODY">    
        <material>Gazebo/Black</material>
        <gravity>True</gravity>
        <sensor name="imu_sensor" type="imu">
          <always_on>true</always_on>
          <update_rate>100</update_rate>
          <visualize>true</visualize>
          <topic>__default_topic__</topic>
          <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
            <topicName>imu</topicName>
            <bodyName>imu_link</bodyName>
            <updateRateHZ>10.0</updateRateHZ>
            <gaussianNoise>0.0001</gaussianNoise>
            <xyzOffset>0 0 0</xyzOffset>
            <rpyOffset>0 0 0</rpyOffset>
            <frameName>imu_link</frameName>
          </plugin>
          <pose>0 0 0 0 0 0</pose>
        </sensor>
      </gazebo>


    <xacro:leg_l xyz="0.1248 -0.06164  0.001116"  rpy="0 4.7123 0.7853981633974483" suffix="AR" femur_axis="-1 0 0" tibia_axis="-1 0 0" />
    <xacro:leg_l xyz="0 -0.1034  0.001116"  rpy="0 4.7123 0" suffix="BR" femur_axis="-1 0 0" tibia_axis="-1 0 0" />
    <xacro:leg_l xyz="-0.1248 -0.06164  0.001116"  rpy="0 4.7123 -0.7853981633974483" suffix="CR" femur_axis="-1 0 0" tibia_axis="-1 0 0" />


    <xacro:leg_l xyz="0.1248 0.06164  0.001116"  rpy="0 4.7123 2.356194490192345" suffix="AL" femur_axis="1 0 0" tibia_axis="1 0 0" />
    <xacro:leg_l xyz="0 0.1034  0.001116"  rpy="0 4.7123 3.14159" suffix="BL" femur_axis="1 0 0" tibia_axis="1 0 0" />
    <xacro:leg_l xyz="-0.1248 0.06164  0.001116"  rpy="0 4.7123 3.9269908169872414" suffix="CL" femur_axis="1 0 0" tibia_axis="1 0 0" />

</xacro:macro>





 <xacro:macro name="leg_l" params="xyz rpy suffix femur_axis tibia_axis">



  <link name="c1_${suffix}">
    <inertial>
      <origin xyz="0 -${connect_offset} 0" rpy="0 0 0"  />
      <mass value="0.024357719"/>
     <inertia ixx="0.0051411124"  ixy="-0.00057530255"  ixz="-0.000024729049" iyy="0.0081915737" iyz="-0.000019223094" izz="0.0011379812" />
    </inertial>
    <visual>
      <origin xyz="0 -0.0252 0" rpy="0 0 0"  />
      <geometry>
        <!--box size="0.045 0.022 0.0325" /-->
        <mesh filename="package://phantomx_description/meshes_mk3/connect.STL"  scale="1 1 1"/>
      </geometry>
      <material name="Grey">
        <color rgba="0.20 0.20 0.20 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 -${connect_offset} 0" rpy="0 0 0"  />
      <geometry>
        <mesh filename="package://phantomx_description/meshes_mk3/connect_coll.STL"  scale="1 1 1"/>
      </geometry>
    </collision>
  </link>


  <link name="c2_${suffix}">
    <inertial>
      <origin xyz="0 -${connect_offset} 0" rpy="0 0 0"  />
      <mass value="0.024357719"/>
     <inertia ixx="0.0051411124"  ixy="-0.00057530255"  ixz="-0.000024729049" iyy="0.0081915737" iyz="-0.000019223094" izz="0.0011379812" />
    </inertial>
    <visual>
      <origin xyz="0 -0.0252 0" rpy="0 0 0"  />
      <geometry>
        <!--box size="0.045 0.022 0.0325" /-->
        <mesh filename="package://phantomx_description/meshes_mk3/connect.STL"  scale="1 1 1"/>
      </geometry>
      <material name="Grey">
        <color rgba="0.20 0.20 0.20 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 -${connect_offset} 0" rpy="0 0 0"  />
      <geometry>
        <mesh filename="package://phantomx_description/meshes_mk3/connect_coll.STL"  scale="1 1 1"/>
      </geometry>
    </collision>
  </link>



  <link name="thigh_${suffix}">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"  />
      <mass value="0.024357719"/>
      <inertia ixx="0.0051411124"  ixy="-0.00057530255"  ixz="-0.000024729049" iyy="0.0081915737" iyz="-0.000019223094" izz="0.0011379812" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"  />
      <geometry>
        <!--box size="0.045 0.022 0.0325" /-->
        <mesh filename="package://phantomx_description/meshes_mk3/thigh_l.STL"  scale="1 1 1"/>
      </geometry>
      <material name="Grey">
        <color rgba="0.20 0.20 0.20 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"  />
      <geometry>
        <mesh filename="package://phantomx_description/meshes_mk3/thigh_l_coll.STL"  scale="1 1 1"/>
      </geometry>
    </collision>
  </link>



  <link name="tibia_${suffix}">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"  />
      <mass value="0.024357719"/>
      <inertia ixx="0.0051411124"  ixy="-0.00057530255"  ixz="-0.000024729049" iyy="0.0081915737" iyz="-0.000019223094" izz="0.0011379812" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"  />
      <geometry>
        <!--box size="0.045 0.022 0.0325" /-->
        <mesh filename="package://phantomx_description/meshes_mk3/tibia_l.STL"  scale="1 1 1"/>
      </geometry>
      <material name="Grey">
        <color rgba="0.20 0.20 0.20 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"  />
      <geometry>
        <mesh filename="package://phantomx_description/meshes_mk3/tibia_l_coll.STL"  scale="1 1 1"/>
      </geometry>
    </collision>
  </link>

  <link name="foot_${suffix}" />

  <joint name="${suffix}_coxa_joint" type="revolute">
    <parent link="MP_BODY"/>
    <child link="c1_${suffix}"/>
    <origin xyz="${xyz}" rpy="${rpy}" />
    <axis xyz="1 0 0" />
    <limit effort="2.8" velocity="5.6548668" lower="-2.6179939" upper="2.6179939" />
    <dynamics friction="0.7" damping="0.0" />
    <safety_controller k_position="100" k_velocity="1.5" soft_lower_limit="-2.6179939" soft_upper_limit="2.6179939"/>
  </joint>

  <joint name="j_c2_${suffix}" type="fixed">
    <parent link="c1_${suffix}"/>
    <child link="c2_${suffix}"/>
    <origin xyz="0 -0.054 0" rpy="0 1.5704 3.14159" />
    <safety_controller k_position="100" k_velocity="1.5" soft_lower_limit="0" soft_upper_limit="0"/>
  </joint>


  <joint name="${suffix}_femur_joint" type="revolute">
    <parent link="c2_${suffix}"/>
    <child link="thigh_${suffix}"/>
    <origin xyz="0 0 0" rpy=" 0 3.14159 3.14159" />
    <axis xyz="${femur_axis}" />
    <limit effort="2.8" velocity="5.6548668" lower="-2.6179939" upper="2.6179939" />
    <dynamics friction="0.7" damping="0.0" />
    <safety_controller k_position="100" k_velocity="1.5" soft_lower_limit="-2.6179939" soft_upper_limit="2.6179939"/>
  </joint>

  <joint name="${suffix}_tibia_joint" type="revolute">
    <parent link="thigh_${suffix}"/>
    <child link="tibia_${suffix}"/>
    <origin xyz="0 ${thigh_offset_y} ${thigh_offset_z}" rpy="-1.5707 0 3.14159" />
    <axis xyz="${tibia_axis}" />
    <limit effort="2.8" velocity="5.6548668" lower="-2.6179939" upper="2.6179939" />
    <dynamics friction="0.7" damping="0.0" />
    <safety_controller k_position="100" k_velocity="1.5" soft_lower_limit="-2.6179939" soft_upper_limit="2.6179939"/>
  </joint>

  <joint name="${suffix}_foot_joint" type="fixed">
    <parent link="tibia_${suffix}" />
    <child link="foot_${suffix}" />
    <origin xyz="0 0.16 0.03" />
    <safety_controller k_position="100" k_velocity="1.5" soft_lower_limit="0" soft_upper_limit="0"/>
  </joint>

   <transmission name="t_c1_${suffix}">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="${suffix}_coxa_joint">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>    
    </joint>
    <actuator name="m_c1_${suffix}">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      <mechanicalReduction>50</mechanicalReduction>
    </actuator>
  </transmission>


   <transmission name="t_thigh_${suffix}">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="${suffix}_femur_joint">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>    
    </joint>
    <actuator name="m_thigh_${suffix}">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      <mechanicalReduction>50</mechanicalReduction>
    </actuator>
  </transmission>


   <transmission name="t_tibia_${suffix}">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="${suffix}_tibia_joint">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="m_tibia_${suffix}">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      <mechanicalReduction>50</mechanicalReduction>
    </actuator>
  </transmission>



  <gazebo reference="c1_${suffix}">    
    <material>Gazebo/Black</material>
    <mu1>0.8</mu1>
    <mu2>0.6</mu2>
    <kp>100</kp>
    <kd>10</kd>
    <gravity>True</gravity>
  </gazebo>

  <gazebo reference="c2_${suffix}">    
    <material>Gazebo/Black</material>
    <mu1>0.8</mu1>
    <mu2>0.6</mu2>
    <kp>100</kp>
    <kd>10</kd>
    <gravity>True</gravity>
  </gazebo>

  <gazebo reference="thigh_${suffix}">    
    <material>Gazebo/Black</material>
    <mu1>0.8</mu1>
    <mu2>0.6</mu2>
    <kp>100</kp>
    <kd>10</kd>
    <gravity>True</gravity>
  </gazebo>

  <gazebo reference="tibia_${suffix}">    
    <material>Gazebo/Black</material>
    <mu1>0.8</mu1>
    <mu2>0.6</mu2>
    <kp>1000</kp>
    <kd>10</kd>
    <gravity>True</gravity>

    <sensor name="${suffix}_foot_contact_sensor" type="contact">
        <always_on>true</always_on>
        <update_rate>100</update_rate>
        <contact>
            <collision>tibia_${suffix}_collision</collision>
        </contact>
        <plugin name="gripper_bumper" filename="libgazebo_ros_bumper.so">
            <bumperTopicName>foot_${suffix}_contact_sensor_state</bumperTopicName>
            <frameName>${suffix}_foot</frameName>
        </plugin>
    </sensor>

  </gazebo>

  
</xacro:macro>





</robot>
